[Trigger]
Type = Package
Operation = Upgrade
Target = ventoy

[Action]
Description = Set shebang to bash in Ventoy shell scripts
When = PostTransaction
Exec = /usr/bin/sed -i 's/\#\!\/bin\/sh/\#\!\/bin\/bash/g' /opt/ventoy/tool/ventoy_lib.sh /opt/ventoy/tool/VentoyWorker.sh
